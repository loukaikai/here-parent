<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.here.modules.product.mapper.PmsAttrAttrGroupRelationMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.here.modules.product.entity.PmsAttrAttrGroupRelation">
        <id column="id" property="id" />
        <result column="attr_id" property="attrId" />
        <result column="attr_group_id" property="attrGroupId" />
    </resultMap>

    <delete id="deleteBatchRelation">
        DELETE FROM `pms_attribute_attrgroup_relation` WHERE
        <foreach collection="entities" item="item" separator=" OR ">
            (attr_id=#{item.attrId} AND attr_group_id=#{item.attrGroupId})
        </foreach>
    </delete>
</mapper>
